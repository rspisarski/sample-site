---
import { wpquery } from "../lib/api";
const data = await wpquery({
    query: `
    query LoadAllPostsExcerpts {
        posts {
            nodes {
                title
                content
                slug
                excerpt
            }
        }
    }
    `,
});

const posts = data.posts.nodes;

---

<div class="container">
    <h1 class="text-center mt-12 mb-4 text-3xl">Astro + WordPress ðŸš€</h1>
    <div class="grid grid-cols-2 gap-4">
        {
            posts.map((post : any) => (
            <a href={`/posts/${post.slug}`} class="p-6 bg-white text-slate-800 rounded-xl block">
                <h2 class="text-lg" set:html={post.title} />
                <p class='' set:html={post.content} />
            </a>
            
            ))
        }
    </div>
</div>

