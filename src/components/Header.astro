---
import { Image } from 'astro:assets';
import heroImage from "../assets/logo-2.svg";   
---

<header class="flex justify-between m-6 md:m-12 md:align-stretch sticky top-6 gap-3 md:gap-0 z-50">
    <div class="h-16 md:h-auto w-48 hover:bg-gradient-to-l from-orange-500 to-orange-600 bg-gradient-to-r from-orange-500 to-orange-600 rounded-xl md:rounded-3xl flex items-center shadow-xl">
        <a class="text-center md:h-full w-full block px-2 md:p-3 font-display text-sm md:text-lg" href="/">
        <Image src={heroImage} width="100" height="30" alt="Fantasy Developer" class="w-full brightness-0 invert" />
        </a>
    </div>
    <div class="h-auto w-full md:w-auto bg-slate-800 rounded-xl md:rounded-3xl py-2 px-4 xl:flex hidden items-center uppercase tracking-widest text-xs shadow-xl">
        <nav class="flex gap-8">
            <a href="#intro" class="px-10 py-3 bg-slate-700 hover:shadow-inner hover:bg-gradient-to-r from-teal-400 to-teal-500 rounded-2xl flex items-center transition-colors">Who We Are</a>
            <a href="#about" class="px-10 py-3 bg-slate-700 hover:shadow-inner hover:bg-gradient-to-r from-teal-400 to-teal-500 rounded-2xl flex items-center transition-colors">Our Difference</a>
            <a href="#portfolio" class="px-10 py-3 bg-slate-700 hover:shadow-inner hover:bg-gradient-to-r from-teal-400 to-teal-500 rounded-2xl flex items-center transition-colors">Portfolio</a>
            <a href="#contact" class="px-10 py-3 bg-slate-700 hover:shadow-inner hover:bg-gradient-to-r from-teal-400 to-teal-500 rounded-2xl flex items-center transition-colors">Get In Touch</a>
        </nav>
    </div>
    <div class="shadow-xl h-16 md:h-auto w-48 uppercase tracking-widest font-bold bg-slate-800 hover:bg-gradient-to-r from-teal-400 to-teal-500 transition-colors rounded-xl md:rounded-3xl px-6 flex items-center justify-between gap-2 flex-row-reverse text-xs" id="hamburger">
        <div class="hamburger">
            <div class="hamburger__line bg-slate-200"></div>
            <div class="hamburger__line bg-slate-200"></div>
            <div class="hamburger__line bg-slate-200"></div>
        </div>
        <span class="">Menu</span>
    </div>
</header>


<style>
    #hamburger { 
        cursor: pointer;
    }
    .hamburger {
        display: inline-block;
        cursor: pointer;
        transition: 0.4s;
    }
    
    .hamburger__line {
        width: 35px;
        height: 3px;
        margin: 8px 0;
        transition: 0.4s;
        border-radius: 100px;
    }
    
    .hamburger__active .hamburger .hamburger__line:nth-child(1) {
        transform: rotate(-45deg) translate(-9px,7px)
    }
    
    .hamburger__active .hamburger .hamburger__line:nth-child(2) {
        opacity: 0;
    }
    
    .hamburger__active .hamburger .hamburger__line:nth-child(3) {
        transform: rotate(45deg) translate(-9px,-6px)
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const hamburger = document.getElementById("hamburger");
        
        hamburger.addEventListener("click", function () {
            hamburger.classList.toggle("hamburger__active");
        });
    });
</script>