---
const title = "Crafting Digital Experiences That Inspire";
import { Image } from 'astro:assets';
import heroImage from "../assets/fantasy-developer.jpeg";   
---

<section class="h-100 center flex items-center w-full flex-wrap mt-24" id="intro">
    <div class="container mx-auto">
        <h1 class="text-4xl text-center mb-12 font-bold">{title}</h1>
        <figure class="w-full h-full overflow-hidden rounded-3xl shadow-2xl">
            <Image src={heroImage} alt="Fantasy Developer" class="w-full" />
        </figure>
    </div>
</section>
