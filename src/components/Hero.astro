---
const { data } = Astro.props;
// console.log(data);
import H1 from "../components/utils/H1.astro";
import { Image } from 'astro:assets';
---

<section class="h-100 center w-full flex-wrap mt-24" id="intro">
    <div class="container mx-auto flex flex-col lg:flex-row items-center gap-10">
        <div class="w-100 lg:w-1/2 pr-12">
            <H1 title={ data.title } />
            <p>{ data.description }</p>   
        </div>
        <div class="w-100 lg:w-1/2">
            <figure class="w-full h-full overflow-hidden rounded-3xl shadow-2xl border-2 border-teal-500">
                <img src={data.image} alt="Richard Pisarski" class="w-full" />
            </figure>
        </div>
    </div>
</section>
