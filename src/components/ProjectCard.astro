---
import H3 from "./utils/H3.astro";
const { project } = Astro.props;
---

<article class="bg-violet-950 border-2 border-teal-500">
  <img src={project.frontmatter.image} alt={project.frontmatter.title} class="w-full h-48 object-cover object-center" />
  <div class="p-12 flex flex-col">
  <H3 title={project.frontmatter.title} />
  <p class="mt-4 mb-8">{project.frontmatter.description}</p>
  <div class="mt-auto">
    <a class='inline-block py-2 px-8 bg-cyan-500 hover:bg-purple-600 uppercase transition-all' href={project.url}>View Project</a>
  </div>
  </div>
</article>